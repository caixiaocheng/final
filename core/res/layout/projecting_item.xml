<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/border_gray" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/projecting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雅戈尔太阳城"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/projecting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2014-10-28 17:29:13"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/projecting_confirm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="完成"
        android:textColor="#00aed9"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/projecting_cancle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#db321b"
        android:textSize="18sp" />

</RelativeLayout>