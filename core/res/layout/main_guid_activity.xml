<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        layout="@layout/title" />

    <LinearLayout
        android:id="@+id/main_guaid_add_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:layout_marginBottom="70dp"
        android:background="#ffffff"
        android:orientation="vertical" >
    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffffff" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/btn_classify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="-12dp"
                    android:drawableTop="@drawable/bg_classify_home_selector"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@drawable/bg_classify_font_selector" />

                <RadioButton
                    
                    android:id="@+id/btn_invidual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="-12dp"
                    android:drawableTop="@drawable/bg_classify_mine_selector"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@drawable/bg_classify_font_selector" />

                <RadioButton
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="-12dp"
                    android:drawableTop="@drawable/bg_classify_search_selector"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@drawable/bg_classify_font_selector" />

                <RadioButton
                    android:id="@+id/btn_contact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="-12dp"
                    android:drawableTop="@drawable/bg_classify_server_selector"
                    android:gravity="center"
                    android:text="客服"
                    android:textColor="@drawable/bg_classify_font_selector" />
            </RadioGroup>
        </LinearLayout>
    </AbsoluteLayout>

</RelativeLayout>