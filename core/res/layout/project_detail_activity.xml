<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/project_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        
        />
    <TextView 
        android:id="@+id/project_detail_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        />
    <TextView 
        android:id="@+id/project_detail_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        />
    <TextView 
        android:layout_marginTop="20dp"
        android:id="@+id/project_detail_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目图片展示："
        
        />

    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy1" />
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy2" />
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy3" />
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy4" />
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy5" />
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/gy6" />

           
        </LinearLayout>
    </HorizontalScrollView >

</LinearLayout>